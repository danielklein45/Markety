extends layout
extends home

block content
    link(rel='stylesheet', href='/stylesheets/style.css')
    #report.center-vertical
        form.well(id='form-report', method='post')
            h2 Report a Problem #{username}
            .form-group
                label Store
                select(name = "dropdown")
                    each store in storesList
                        option(value=store._id) #{store.Name}
            .form-group
                label Problem
                input.input-xlarge(type='text', id='Problem', name='problem')
            .controls
                button(type='submit').btn.btn-primary.button-sign-in
                    span.glyphicon.glyphicon-lock
                    | Report
        label #{message}